{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@shared/ui": ["shared/components/ui"],
      "@shared/ui/*": ["shared/components/ui/*"],
      "@shared/components/*": ["shared/components/*"],
      "@shared/api/*": ["shared/api-gateway/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@deployment/*": ["deployment/*"],
      "@core/*": ["core/*"]
    }
  },
  "include": [
    "ai-platforms/**/*.ts",
    "ai-platforms/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "infrastructure/**/*.ts",
    "infrastructure/**/*.tsx",
    "core/**/*.ts",
    "core/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.d.ts",
    "**/dist/**",
    "**/build/**",
    "**/.next/**"
  ]
} 