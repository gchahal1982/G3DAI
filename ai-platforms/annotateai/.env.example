# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/annotateai"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="annotateai"
DATABASE_USER="username"
DATABASE_PASSWORD="password"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"
NODE_ENV="development"

# JWT Configuration
JWT_SECRET="your-jwt-secret-here"
JWT_EXPIRES_IN="7d"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# AWS Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="annotateai-uploads"
AWS_CLOUDFRONT_DOMAIN="your-cloudfront-domain.cloudfront.net"

# Email Configuration
EMAIL_FROM="noreply@annotateai.com"
EMAIL_FROM_NAME="AnnotateAI"

# SendGrid Configuration
SENDGRID_API_KEY="your-sendgrid-api-key"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Sentry Configuration
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="annotateai"

# Datadog Configuration
DATADOG_API_KEY="your-datadog-api-key"
DATADOG_APP_KEY="your-datadog-app-key"

# Intercom Configuration
INTERCOM_APP_ID="your-intercom-app-id"
INTERCOM_API_KEY="your-intercom-api-key"

# Elasticsearch Configuration
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME="elastic"
ELASTICSEARCH_PASSWORD="password"

# OpenAI Configuration (for AI features)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4"

# Google Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Mixpanel Configuration
MIXPANEL_TOKEN="your-mixpanel-token"

# Webhook Configuration
WEBHOOK_SECRET="your-webhook-secret"

# Rate Limiting
RATE_LIMIT_WINDOW="900000"  # 15 minutes
RATE_LIMIT_MAX="100"        # 100 requests per window

# File Upload Configuration
MAX_FILE_SIZE="100MB"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/bmp,image/tiff,video/mp4,video/avi,video/mov,application/dicom"

# AI Model Configuration
MODEL_INFERENCE_ENDPOINT="http://localhost:8000"
MODEL_TRAINING_ENDPOINT="http://localhost:8001"

# Security Configuration
CORS_ORIGINS="http://localhost:3000,https://annotateai.com"
CSRF_SECRET="your-csrf-secret"

# Monitoring Configuration
ENABLE_MONITORING="true"
ENABLE_ANALYTICS="true"
ENABLE_ERROR_TRACKING="true"

# Feature Flags
ENABLE_COLLABORATION="true"
ENABLE_AI_FEATURES="true"
ENABLE_BILLING="true"
ENABLE_ENTERPRISE_FEATURES="true"

# Cache Configuration
CACHE_TTL="3600"  # 1 hour
CACHE_PREFIX="annotateai:"

# Backup Configuration
BACKUP_RETENTION_DAYS="30"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Compliance Configuration
ENABLE_GDPR="true"
ENABLE_HIPAA="true"
ENABLE_SOC2="true"
DATA_RETENTION_DAYS="2555"  # 7 years

# Development Configuration
DEBUG="false"
VERBOSE_LOGGING="false"
ENABLE_PROFILING="false"